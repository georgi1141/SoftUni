


<header>
  <nav>
    <ul class="navigation">
      <li><a href="/">Home Page</a></li>
      <li><a href="/addBreed">Add Breed</a></li>
      <li><a href="/addCat">Add Cat</a></li>
    </ul>
  </nav>
  <h1>Cat Shelter</h1>
  <form action="/search">
    <input type="text" />
    <button type="button">Search</button>
  </form>
</header>

<main>
  <section class="cats">
    <ul>
      {{#if data}}
        {{#each data}}
     <li>
        <img
          src={{image}}
          alt="pic of a cat"
        />
        <h3>{{name}}</h3>
        <p><span>Breed: </span>{{breed}}</p>
        <p><span>Description: </span>{{description}}</p>
        <ul class="buttons">
          <li class="btn edit"><a href="">Change Info</a></li>
          <li class="btn delete"><a href="">New Home</a></li>
        </ul>
      </li>
  {{/each}}
{{else}}
  <strong>No cats!</strong>
{{/if}}
    </ul>
  </section>
</main>